{
  "id": "chef_platform",
  "driver": {
    "name": "vagrant"
  },
  "chef_server": {
    "topology": "tier",
    "version": "latest",
    "api_fqdn": "chef-server.chefplatform.local",
    "configuration": {
      "postgresql": {
        "max_connections": 1501,
        "log_min_duration_statement": 500
      },
      "opscode_erchef": {
        "depsolver_worker_count": 4,
        "depsolver_timeout": 120000,
        "db_pool_size": 100
      },
      "oc_bifrost": {
        "db_pool_size": 100
      },
      "opscode_certificate": {
        "num_workers": 4,
        "num_certificates_per_worker": 1000
      },
      "oc_chef_authz": {
        "http_init_count": 150,
        "http_max_count": 150
      }
    }
  },
  "analytics": {
    "version": "latest",
    "api_fqdn": "analytics.chefplatform.local",
    "configuration": {
      "actions_consumer": {
        "hipchat_api_token": "4yZvEWO6gnVhjtl3F6aU12obylgNXzzqmklI5jP0",
        "hipchat_enabled": [
          "prod",
          "preprod"
        ],
        "hipchat_room": "Chef Notification"
      }
    }
  },
  "supermarket": {
    "version": "latest",
    "api_fqdn": "js4",
    "configuration": {

    }
  },
  "delivery": {
    "version": "latest",
    "api_fqdn": "js4",
    "configuration": {

    }
  },
  "nodes": [
    {
      "node_name": "backend1",
      "service": "chef_server",
      "fqdn": "backend1.ubuntu.vagrant",
      "interface": "eth1",
      "machine_options_ipaddress": "33.33.33.20",
      "role": "backend",
      "bootstrap": true,
      "ipaddress": "33.33.33.20"
    },
    {
      "node_name": "frontend1",
      "service": "chef_server",
      "fqdn": "frontend1.ubuntu.vagrant",
      "interface": "eth1",
      "machine_options_ipaddress": "33.33.33.22",
      "role": "frontend",
      "bootstrap": false,
      "ipaddress": "33.33.33.22"
    },
    {
      "node_name": "analytics1",
      "service": "analytics",
      "fqdn": "analytics.ubuntu.vagrant",
      "interface": "eth1",
      "machine_options_ipaddress": "33.33.33.25",
      "role": "analytics",
      "bootstrap": false,
      "ipaddress": "33.33.33.25"
    }
  ]
}